<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_title"
        android:id="@+id/title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="维保结果"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"/>
    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alarm_info"
        android:hint=""
        android:layout_marginLeft="5dp"
        android:gravity="top"
        android:maxLines="3"
        android:lines="5"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/color_easy_alarm_text"
        />
    <TextView
        android:id="@+id/submit"
        android:text="提交"
        android:paddingLeft="@dimen/size_50dp"
        android:paddingRight="@dimen/size_50dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/selector_plan_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>