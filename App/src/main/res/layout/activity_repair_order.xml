<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honyum.elevatorMan.activity.worker.RepairOrderActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_mt_underway"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mt_underway"
                android:layout_width="@dimen/bottom_tab_icon_size"
                android:layout_height="@dimen/bottom_tab_icon_size"
                android:src="@drawable/sel_mt_underway" />

            <TextView
                android:id="@+id/tv_mt_underway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中维修"
                android:textColor="@color/color_bottom_tab_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mt_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mt_history"
                android:layout_width="@dimen/bottom_tab_icon_size"
                android:layout_height="@dimen/bottom_tab_icon_size"
                android:src="@drawable/sel_tab_history_alarm" />

            <TextView
                android:id="@+id/tv_mt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史维修记录"
                android:textColor="@color/color_bottom_tab_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
