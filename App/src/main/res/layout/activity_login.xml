<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/title_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="5dp"
            android:text="全国"
            android:textColor="@color/title_text_color"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_enterprise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:text="梯美（管理）"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_horizontal"
                android:layout_marginRight="@dimen/input_margin_horizontal"
                android:background="@drawable/shape_input_white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                    <ImageView
                        android:layout_width="@dimen/input_icon_size"
                        android:layout_height="@dimen/input_icon_size"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_user" />

                    <EditText
                        android:id="@+id/et_user"
                        style="@style/input_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_edit"
                        android:layout_weight="1"
                        android:hint="@string/input_name"
                        android:singleLine="true"
                        android:textColorHint="@color/color_half_white"
                        android:textCursorDrawable="@null" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_horizontal"
                android:layout_marginRight="@dimen/input_margin_horizontal"
                android:layout_marginTop="@dimen/input_margin_vertical"
                android:background="@drawable/shape_input_white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                    <ImageView
                        android:layout_width="@dimen/input_icon_size"
                        android:layout_height="@dimen/input_icon_size"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_pwd" />

                    <EditText
                        android:id="@+id/et_pwd"
                        style="@style/input_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_edit"
                        android:layout_weight="1"
                        android:hint="@string/input_pwd"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_half_white"
                        android:textCursorDrawable="@null" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin_horizontal"
                android:layout_marginRight="@dimen/input_margin_horizontal"
                android:layout_marginTop="@dimen/btn_top_size"
                android:background="@color/white"
                android:text="@string/login"
                android:textColor="@color/titleblue" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:text="注册"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/wei_bao"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_reset_pwd"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:text="忘记密码"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>