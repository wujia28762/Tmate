<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_margin="@dimen/size_10dp"
            android:src="@drawable/insurance" />

        <TextView
            android:id="@+id/tv_insurance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_toRightOf="@id/image"
            android:text="意外伤害险"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_insurance_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/image"
            android:layout_below="@+id/image"
            android:textSize="16sp"
            android:textColor="@color/frontgray"
            android:text="NO.1111111111111111111" />

        <TextView
            android:textColor="@color/frontgray"
            android:id="@+id/tv_insurance_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_insurance_no"
            android:layout_margin="@dimen/size_10dp"
            android:text="保险公司：平安保险" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/insuranceing"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_insurance_company"
        android:background="@color/titleblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <TextView
            android:textColor="@color/frontgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投保人"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=" "/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_insurance_company"
        android:background="@color/titleblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <TextView
            android:textColor="@color/frontgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被保险人"/>
        <TextView
            android:id="@+id/tv_benamed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=" "/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <TextView
            android:textColor="@color/frontgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保险时长"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=" "/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <TextView
            android:textColor="@color/frontgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始时间"/>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=" "/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <TextView
            android:textColor="@color/frontgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"/>
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleblue" />



</LinearLayout>