<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_taskdetailinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_grey_normal">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_search_contarct">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/rl_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/repair"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_id"
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shape_contarct_line"
                android:layerType="software"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start"
                    android:id="@+id/tv_code"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/gray"
                    android:gravity="center_vertical|end"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_worker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修人:李四"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_worker_tel"
                    android:layout_toRightOf="@id/tv_worker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15210207858"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="已完成"
                    android:gravity="right"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通"
                    android:textColor="@color/oder_blue" />

                <TextView
                    android:id="@+id/tv_fault_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轿厢故障"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/oder_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/shape_contarct_line"
                    android:layerType="software"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/repair_work"/>

                    <TextView
                        android:id="@+id/tv_work_name"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="指派人员：张三"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_work_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15210210506"
                        android:textColor="@color/black"
                        android:layout_marginLeft="30dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>