<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/size_20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:text="E管家"
        android:textColor="@color/titleblue"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_background"
        android:orientation="vertical"
        android:padding="@dimen/size_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alert_my_ele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/my_ele"
                android:gravity="center_horizontal"
                android:text="我的电梯" />

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/alert_work_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/worker_list"
                    android:gravity="center_horizontal"
                    android:text="工单管理" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_alert_work_order_count"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/alert_work_order"
                    android:background="@drawable/shape_radius_1"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/alert_save_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/pro_plan"
                    android:gravity="center_horizontal"
                    android:text="维保计划" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_save_plan_count"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/alert_save_plan"
                    android:background="@drawable/shape_radius_1"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/alert_fix_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/fix_manager"
                android:gravity="center_horizontal"
                android:text="电梯报修" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_alert_fix_manager_count"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/alert_fix_manager"
                android:background="@drawable/shape_radius_1"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>