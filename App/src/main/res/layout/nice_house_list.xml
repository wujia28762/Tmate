<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:padding="@dimen/size_20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/titleblue"
        android:layout_margin="@dimen/size_10dp"
        android:text="怡墅功能"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/size_20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/alert_nice_house_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/nice_hose_pro_xi"
                android:drawablePadding="5dp"
                android:text="怡墅维保"/>
            <TextView
                android:visibility="gone"
                android:layout_alignRight="@+id/alert_nice_house_pro"
                android:layout_alignParentTop="true"
                android:id="@+id/tv_nice_house_pro_count"
                android:background="@drawable/shape_radius_1"
                android:layout_width="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="10dp"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/alert_nice_house_fix"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/nice_hose_fix_xi"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"
                android:text="怡墅维修"/>
                <TextView
                    android:visibility="gone"
                    android:layout_alignRight="@+id/alert_nice_house_fix"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tv_alert_nice_house_fix_count"
                    android:background="@drawable/shape_radius_1"
                    android:layout_width="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_height="10dp"/>
           </RelativeLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>