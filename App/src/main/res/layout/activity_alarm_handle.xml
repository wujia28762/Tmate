<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_handle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honyum.elevatorMan.activity.property.AlarmHandleActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_alarm"
                android:layout_width="@dimen/bottom_tab_icon_size"
                android:layout_height="@dimen/bottom_tab_icon_size"
                android:src="@drawable/sel_tab_current_alarm" />

            <TextView
                android:id="@+id/tv_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前报警"
                android:textColor="@color/color_bottom_tab_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_history_alarm"
                android:layout_width="@dimen/bottom_tab_icon_size"
                android:layout_height="@dimen/bottom_tab_icon_size"
                android:src="@drawable/sel_tab_history_alarm" />

            <TextView
                android:id="@+id/tv_history_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史报警"
                android:textColor="@color/color_bottom_tab_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pro_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pro_alarm"
                android:layout_width="@dimen/bottom_tab_icon_size"
                android:layout_height="@dimen/bottom_tab_icon_size"
                android:src="@drawable/sel_tab_project_alarm" />

            <TextView
                android:id="@+id/tv_pro_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目报警"
                android:textColor="@color/color_bottom_tab_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
