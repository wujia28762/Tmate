<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />


        <LinearLayout
            android:background="@color/backgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/size_10dp"
                android:textColor="@color/frontgray"
                android:text="维修收费明细" />

            <TextView
                android:id="@+id/tv_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/size_10dp"
                android:textColor="@color/titleblue"
                android:text="添加收费项目" />

        </LinearLayout>

        <ListView
            android:id="@+id/rlv_pay_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <include
            android:id="@+id/pay_list"
            layout="@layout/pay_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/size_20dp"
    android:id="@+id/tv_fix_payment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"

    android:paddingBottom="@dimen/size_10dp"
    android:paddingTop="@dimen/size_10dp"
    android:paddingLeft="@dimen/size_20dp"
    android:paddingRight="@dimen/size_20dp"
    android:background="@drawable/selector_plan_lanse"
    android:text="提交明细"
    android:textColor="@color/white"
    android:textSize="15sp" />




</LinearLayout>