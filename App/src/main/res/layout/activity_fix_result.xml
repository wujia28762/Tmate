<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_full_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#86222222"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </LinearLayout>
    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次结果"
        android:layout_margin="@dimen/size_10dp"/>
    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
       android:layout_margin="@dimen/size_10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alarm_info"
        android:layout_marginLeft="5dp"
        android:gravity="top"
        android:maxLines="5"
        android:lines="5"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/color_easy_alarm_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_image1"
        android:layout_width="@dimen/size_0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="现场图片" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defaut_image" />
                <Button
                    android:id="@+id/btn_del_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:background="@drawable/icon_del_img"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:id="@+id/ll_image2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="现场图片" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/iv_image2"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaut_image" />
                    <Button
                        android:id="@+id/btn_del_2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:background="@drawable/icon_del_img"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:id="@+id/ll_image3"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="现场图片" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/iv_image3"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaut_image" />
                    <Button
                        android:id="@+id/btn_del_3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:background="@drawable/icon_del_img"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_image4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="现场图片" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/iv_image4"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaut_image" />
                    <Button
                        android:id="@+id/btn_del_4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:background="@drawable/icon_del_img"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_fix_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_plan_lanse"
        android:padding="10dp"
        android:text="检修完成"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_fix_complete1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_plan_lanse"
        android:padding="10dp"
        android:text="维修完成"
        android:textColor="@color/white"
        android:textSize="15sp" />




</LinearLayout>