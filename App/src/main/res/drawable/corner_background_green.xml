<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#03cd99" />
            <corners
                android:radius="5dp"/>
            <padding android:bottom="@dimen/size_10dp"
                android:top="@dimen/size_10dp"
                android:left="@dimen/size_10dp"
                android:right="@dimen/size_10dp"/>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/white" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>